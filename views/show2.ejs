<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/css/style.css">
        <title>Product Show Page</title>
    </head>
    <body>
        <%- include ('./partials/header.ejs') %>
    
    <div id="productshow">
        <div class="video">
        <video id="categories" width="60%" height="40%" autoplay loop muted>
            <source src="<%=product.img; %>" type="video/mp4" />
        </video>
        </div>
        <div class="text">
        <h2><%=product.category; %>: <%=product.name; %></h2>
        <p><b><%= product.description %></p>
        </div>  
    </div>
        <br>
        <!-- <form action="/wishlist/" method="POST">
            <button>Add to Wishlist</button>
            </form> -->
        <br>
        <%- include ('./partials/footer.ejs') %>
        <br>
        <br>
        <a href="/products/<%=product._id %>/edit">Edit Product</a>
        <br>
        <br>
        <form action="/products/<%=product._id %>?_method=DELETE" method="POST">
            <input type="submit" value="DELETE" />
        </form>


        <br>


    </body>
</html>